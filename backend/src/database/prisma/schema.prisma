// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @unique @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
  tasks     Task[]

  @@map("users")
}

model Task {
  id          String  @id @unique @default(uuid())
  author      User    @relation(fields: [author_id], references: [id])
  author_id   String
  title       String
  description String?
  status      String

  @@map("tasks")
}
